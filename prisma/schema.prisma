generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TimeSlot {
  id       String   @id @default(cuid()) @map("_id") @db.ObjectId
  start    DateTime
  isBooked Boolean  @default(false)
  User     User?    @relation(fields: [userId], references: [id])
  userId   String?  @db.ObjectId
}

model User {
  id        String     @id @default(cuid()) @map("_id") @db.ObjectId
  email     String     @unique
  timeSlots TimeSlot[]
}
